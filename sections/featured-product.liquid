{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  
.section-{{ section.id }} .section-inner {
  padding-top: {{ section.settings.top_padding }}px;
  padding-bottom: {{ section.settings.bottom_padding }}px;  
}

@media only screen and (min-width: 950px) {
  .section-{{ section.id }} .image-with-text--text.vertical-align--top {
    padding-top: {{ section.settings.txt_vertical_padding }}px;
  }
  .section-{{ section.id }} .image-with-text--text.vertical-align--bottom {
    padding-bottom: {{ section.settings.txt_vertical_padding }}px;
  }
}
  
{% if section.settings.image_alignment == 'right' %}
.section-{{ section.id }} .image-with-text--image {
  order: 2;
}  
{% endif %}

{% if section.settings.txt_alignment == 'center' %}
.section-{{ section.id }} .image-with-text--text {
  text-align: center;
} 
.section-{{ section.id }} .image-with-text--inset-image {
  margin: 0 auto;
}
{% endif %}
{% if section.settings.txt_alignment == 'right' %}
.section-{{ section.id }} .image-with-text--text {
  text-align: right;
} 
{% endif %} 
  
{%- endstyle -%}

{% if section.settings.card_spacing == 0 %}
{% assign card_space = 'grid-card-spacing-zero' %}
{% endif %}
{% if section.settings.card_spacing == 10 %}
{% assign card_space = 'grid-card-spacing-ten' %}
{% endif %}
{% if section.settings.card_spacing == 20 %}
{% assign card_space = 'grid-card-spacing-twenty' %}
{% endif %}
{% if section.settings.card_spacing == 30 %}
{% assign card_space = 'grid-card-spacing-thirty' %}
{% endif %}
{% if section.settings.card_spacing == 40 %}
{% assign card_space = 'grid-card-spacing-fourty' %}
{% endif %}
{% if section.settings.card_spacing == 50 %}
{% assign card_space = 'grid-card-spacing-fifty' %}
{% endif %}
{% if section.settings.card_spacing == 60 %}
{% assign card_space = 'grid-card-spacing-sixty' %}
{% endif %}

{%- liquid
  assign product = section.settings.product
-%}

<div class="section-container section-image-with-text section-featured-product section-{{ section.id }} color-scheme-{{ section.settings.text_color }} color-scheme-{{ section.settings.bg_color }}">

{% if section.settings.top_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %}
  
<div class="section-inner">
<div class="image-with-text-content-container{% if section.settings.card_spacing > 0 or section.settings.inner_padding > 0 %} std-page-padding{% endif %} {{ section.settings.content_width | escape }} {{ card_space }}">

<div class="image-with-text--image image-ratio-{{ section.settings.image_ratio }}">

<div class="image-cover-container">
<div class="image-cover-wrapper{% if section.settings.video != null %} autoplaying-video{% endif %}">
{% if product %}<a href="{{ product.url }}">{% endif %}

{% if section.settings.video == null and section.settings.image == blank %}
  {% render 'media-placeholder-product', sequence_number: 11 %}
{% endif %}
  
{% if section.settings.video != null %}
{% assign video_id = 'video-' | append: section.id %}
  {{
    section.settings.video
    | video_tag:
      id: video_id,
      image_size: '1600x',
      autoplay: true,
      loop: true,
      controls: false,
      muted: true,
      loading: 'lazy'
  }}
{% endif %}

{% if section.settings.video == null and section.settings.image != blank %}  
{{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy' }}
{% endif %}

{% if product %}</a>{% endif %}
</div>
</div>  

</div>

<div class="image-with-text--text vertical-align--{{ section.settings.txt_vertical_alignment }}">
<div class="image-with-text--content">
{% if section.settings.secondary_image %}
<div class="image-with-text--inset-image inset-image-{{ section.settings.secondary_image_scale }}">
{% if product %}<a href="{{ product.url }}">{% endif %}
{{ section.settings.secondary_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
{% if product %}</a>{% endif %}
</div> 
{% endif %}

{% if section.settings.show_tag %}

{% for tag in section.settings.product.tags %}
{% if tag contains 'Badge:' %}
<div class="fp-tag">{{ tag | remove: 'Badge: '}}</div>
{% endif %}
{% endfor %}

{% endif %}  
  
{% for block in section.blocks %}

{% case block.type %}

{% when '@app' %}
{% render block %}

{% when 'custom_liquid' %}

<div {{ block.shopify_attributes }}>
{{ block.settings.custom_liquid }}
</div>
  
{% when 'caption' %}

<style>
.section-{{ section.id }} .section-label {
  padding-top: {{ block.settings.block_padding_top }}px;
  padding-bottom: {{ block.settings.block_padding_bottom }}px;
}  
</style>
  
<div class="section-label" {{ block.shopify_attributes }}>{{ block.settings.caption }}</div>
  
{% when 'collapsible_row' %}
{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
  
<div class="accordion" {{ block.shopify_attributes }}>
<button class="accordion-title" tabindex="0" aria-expanded="false" role="button" aria-controls="AccContent-{{ block.id }}-{{ section.id }}" id="AccHeading-{{ block.id }}-{{ section.id }}"><span>{{ block.settings.row_heading }}</span>
<div class="accordion-icons-wrapper">
<div class="accordion-icon-open">{% if settings.accordion_icon == 'plus' %}{% render 'icon-plus' %}{% else %}{% render 'icon-caret' %}{% endif %}</div>
<div class="accordion-icon-close">{% if settings.accordion_icon == 'plus' %}{% render 'icon-minus' %}{% else %}{% render 'icon-caret' %}{% endif %}</div>
</div>
</button>
<div class="accordion-panel" role="region" aria-hidden="true" aria-labelledby="AccHeading-{{ block.id }}-{{ section.id }}" id="AccContent-{{ block.id }}-{{ section.id }}">
{{ block.settings.row_text }}
</div>
</div>
  
  
{% when 'price' %}

<style>
.section-{{ section.id }} .featured-product--price {
  padding-top: {{ block.settings.block_padding_top }}px;
  padding-bottom: {{ block.settings.block_padding_bottom }}px;
}  
</style>
  
<div class="featured-product--price" {{ block.shopify_attributes }}>
  {% render 'price', product: product %}
  {%- if shop.taxes_included or shop.shipping_policy.body != blank -%}
    {% if block.settings.price_show_taxes %}
    <div class="product__tax caption rte">
      {%- if shop.taxes_included -%}
        {{ 'products.product.include_taxes' | t }}
      {%- endif -%}
      {%- if shop.shipping_policy.body != blank -%}
        {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
      {%- endif -%}
    </div>
   {% endif %}
  {%- endif -%}
</div>

{% when 'title' %}
  
<h2 class="{{ block.settings.heading_size | escape }}" {{ block.shopify_attributes }}>
{% if product.title != blank %}
  {{ product.title }}
  {% else %}
  {{ 'onboarding.product_title' | t }}
{% endif %}
</h2>

{% when 'description' %}  

<style>
.section-{{ section.id }} .featured-product--description {
  padding-top: {{ block.settings.block_padding_top }}px;
  padding-bottom: {{ block.settings.block_padding_bottom }}px;
}  
</style>
  
<div class="featured-product--description" {{ block.shopify_attributes }}>
{{ block.settings.description }}
</div>
  
{% when 'button' %}

{% assign button_class = 'button button--solid' %}
{% if block.settings.button_style == 'outline' %}
{% assign button_class = 'button button--outline' %}
{% endif %}
{% if block.settings.button_style == 'link' %}
{% assign button_class = 'link--underlined' %}
{% endif %}
  
{% if block.settings.button_type == 'buy' and section.settings.product != blank %}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
  
<div class="image-with-text-footer button-color-scheme--{{ section.settings.btn_color_scheme }} button-width-mobile--{{ block.settings.button_width_mobile }} button-width-desktop--{{ block.settings.button_width_desktop }}" {{ block.shopify_attributes }}>
  <div class="featured-product-quick-add">
  <div class="quick-add no-js-hidden">
    {%- liquid
      assign product_form_id = 'quick-add-' | append: section.id | append: product.id
      assign qty_rules = false
      if product.selected_or_first_available_variant.quantity_rule.min > 1 or product.selected_or_first_available_variant.quantity_rule.max != null or product.selected_or_first_available_variant.quantity_rule.increment > 1
        assign qty_rules = true
      endif
    -%}
    {%- if product.variants.size > 1 or qty_rules -%}
        <a class="quick-add-f-button {{ button_class }}" href="{{ product.url }}">
            <span>
              {%- if product.selected_or_first_available_variant.available -%}
                {{ 'products.product.choose_options' | t }}
              {%- else -%}
                {{ 'products.product.sold_out' | t }}
              {%- endif -%}
            </span>      
        </a>
    {%- else -%}
      <product-form>
        {%- form 'product',
          product,
          id: product_form_id,
          class: 'form',
          novalidate: 'novalidate',
          data-type: 'add-to-cart-form'
        -%}
          <input
            type="hidden"
            name="id" data-productid="{{ product.id }}"
            value="{{ product.selected_or_first_available_variant.id }}"
            disabled
          >
          <button
            id="{{ product_form_id }}-submit"
            type="submit"
            name="add"
            class="quick-add__submit {{ button_class }}"
            aria-haspopup="dialog"
            aria-labelledby="{{ product_form_id }}-submit title-{{ section.id }}-{{ product.id }}"
            aria-live="polite"
            data-sold-out-message="true"
            {% if product.selected_or_first_available_variant.available == false %}
              disabled
            {% endif %}
          >
            <span>
              {%- if product.selected_or_first_available_variant.available -%}
                {{ 'products.product.add_to_cart' | t }}
              {%- else -%}
                {{ 'products.product.sold_out' | t }}
              {%- endif -%}
            </span>
            <span class="sold-out-message hidden">
              {{ 'products.product.sold_out' | t }}
            </span>
            <div class="loading-overlay__spinner hidden">
              <svg
                aria-hidden="true"
                focusable="false"
                class="spinner"
                viewBox="0 0 66 66"
                xmlns="http://www.w3.org/2000/svg"
              >
                <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
              </svg>
            </div>
          </button>
        {%- endform -%}
      </product-form>
    {%- endif -%}
  </div>
  </div>
  
</div>
  
{% else %}

<div class="image-with-text-footer button-color-scheme--{{ section.settings.btn_color_scheme }} button-width-mobile--{{ block.settings.button_width_mobile }} button-width-desktop--{{ block.settings.button_width_desktop }}" {{ block.shopify_attributes }}>
{% if section.settings.product == blank %}
  <a href="#" class="{{ button_class }}">{{ 'sections.featured_product.onboarding_shop_now'  | t }}</a>
{% else %}
  <a href="{{ product.url }}" role="link" class="{{ button_class }}">{{ block.settings.button_text }}</a>
{% endif %}
</div>

{% endif %}
  
{% endcase %}
  
{% endfor %}

</div>
</div>
</div>
</div>  

{% if section.settings.bottom_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %}
  
</div>


{% if section.settings.video_poster %}
  {{ section.settings.video_poster | image_url: width: 1080 | image_tag: loading: 'lazy' }}
{% endif %}
</div>

{% if section.settings.video_mob_url != null %}
{% assign video_id = 'vid-mob-' | append: section.id %}
<div class="video-banner-player mobile-video-player autoplaying-video">
  {{
    section.settings.video_mob_url
    | video_tag:
      id: video_id,
      image_size: '1080x',
      autoplay: true,
      loop: true,
      controls: false,
      muted: true
  }} 
</div>
{% endif %}
  

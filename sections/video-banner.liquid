{% assign heading_html_tag = 'h2' %}

{% if section.index == 1 %}
{% assign heading_html_tag = 'h1' %}  
{% endif %}

{%- style -%}
.section-{{ section.id }} {
  background: {{ section.settings.bg_color }};
}

{%- if section.settings.overlay_level < 10 -%}
.section-{{ section.id }} .banner-overlay {
  background: rgba(0,0,0,0.05);
}
{%- else -%}
.section-{{ section.id }} .banner-overlay {
  background: rgba(0,0,0,0.{{ section.settings.overlay_level }});
}
{%- endif -%}
  
.section-{{ section.id }} .section-inner {
  padding-top: {{ section.settings.top_padding }}px;
  padding-bottom: {{ section.settings.bottom_padding }}px;
}
  
.section-{{ section.id }} .banner-overlay {
  margin-top: -{{ section.settings.top_padding }}px;
  margin-bottom: -{{ section.settings.bottom_padding }}px;
}

.section-{{ section.id }}.color-scheme-fg-white .button-color-scheme--match-section .button--solid {
  background: #ffffff;
  color: rgb(var(--color-foreground));
}

.section-{{ section.id }}.color-scheme-fg-white .button-color-scheme--match-section .button--outline {
  background: none;
  color: #ffffff;
}

.section-{{ section.id }} .video-banner-player {
  padding: {{ section.settings.video_margin_mobile }}px;
}

.section-{{ section.id }} .banner-full-bleed-text > div {
  padding: {{ section.settings.text_vertical_spacing }}px 0;
}

@media only screen and (min-width: 1025px) {
  .section-{{ section.id }} .video-banner-player {
    padding: {{ section.settings.video_margin_desktop }}px;
  }
}
  
{%- endstyle -%}

<div class="section-container{% if section.index == 1 %} landing-screen-section{% endif %} section-video-banner banner-full-bleed section-{{ section.id }} {{ section.settings.banner_size }} color-scheme-{{ section.settings.text_color }}">
<div class="section-inner banner-text-position--{{ section.settings.txt_position }}">

<div class="banner-full-bleed-text banner-text-effect--{{ section.settings.text_blend_effect }} banner-text-width--{{ section.settings.content_width | escape }} align--{{ section.settings.txt_alignment }}{% if section.settings.fade_in_text %} banner-text-fade-in{% endif %}">

{% for block in section.blocks %}
{% case block.type %}

{% when 'logo' %}
{% assign logo_width = block.settings.logo_width_desktop | times: 2 %}

{% if block.settings.logo_full_width %}
{% assign logo_width = 2400 %}
{% endif %}

<style>
  .banner-logo {
    width: {{ block.settings.logo_width_mobile }}px;
    max-width: 100%;
  }
  @media only screen and (min-width: 1025px) {
    .banner-logo {
      width: {{ block.settings.logo_width_desktop }}px;
      max-width: 100%;
    }    
  }
  {% if block.settings.logo_full_width %}
  .banner-logo {
    width: 100% !important;
  }
  {% endif %}
</style>
  
<div class="banner-logo" {{ block.shopify_attributes }}>
{% if block.settings.logo %}{{ block.settings.logo | image_url: width: logo_width | image_tag }}{% endif %}
</div>
  
{% when 'caption' %}
<div class="section-label" {{ block.shopify_attributes }}>
{{ block.settings.caption }}
</div>
  
{% when 'heading' %}
<div class="video-banner-heading align-{{ block.settings.txt_alignment }}" {{ block.shopify_attributes }}>
{% unless block.settings.txt_alignment == 'asymmetric' and block.settings.heading contains '/' %}
<{{ heading_html_tag }} class="{{ block.settings.heading_size }}">{{ block.settings.heading }}</{{ heading_html_tag }}>
{% endunless %}
{% if block.settings.txt_alignment == 'asymmetric' and block.settings.heading contains '/' %}
{% assign words = block.settings.heading | split: ' / ' %}
<{{ heading_html_tag }} class="{{ block.settings.heading_size }} asymmetric-heading-{{ words.size }}-words">
  {% for word in words %}
    <div class="image-banner-word">{{ word }}</div>
  {% endfor %}
</{{ heading_html_tag }}>
{% endif %}
</div>
  
{% when 'text' %}
<div class="{{ block.settings.text_size }}" {{ block.shopify_attributes }}>
{{ block.settings.text }}
</div>  

{% when 'buttons' %}

<style>
  .section-{{ section.id }} .image-banner-buttons-inline {
    padding-top: {{ block.settings.padding_top }}px !important;
    padding-bottom: {{ block.settings.padding_bottom }}px !important;
  }
</style>
  
{% assign color_scheme = block.settings.btn_color_scheme %}
{% assign button_layout = block.settings.btn_layout %}
  
<div class="image-banner-buttons-inline{% if block.settings.btn_one_show and block.settings.btn_two_show %} buttons-layout-{{ button_layout }}{% endif %}  button-color-scheme--{{ color_scheme }}" {{ block.shopify_attributes }}> 
{% if block.settings.btn_one_show %}
<a href="{{ block.settings.btn_one_link }}" class="{% unless block.settings.btn_one_style == 'link--underlined' %}button{% endunless %} {{ block.settings.btn_one_style }}">{{ block.settings.btn_one_txt }}</a>  
{% endif %}
{% if block.settings.btn_two_show %}
<a href="{{ block.settings.btn_two_link }}" class="{% unless block.settings.btn_two_style == 'link--underlined' %}button{% endunless %} {{ block.settings.btn_two_style }}">{{ block.settings.btn_two_txt }}</a> 
{% endif %}
</div>
{% endcase %}
{% endfor %}

</div>

<div class="bg-pane banner-overlay"></div>
{% if section.settings.enable_playback_pause %}
<button class="video-controls--pause-playback playing">{% render 'icon-video-controls' %}</button>
{% endif %}
{% if section.settings.scroll_fade_effect %}<div class="bg-pane banner-overlay-fader"></div>{% endif %}

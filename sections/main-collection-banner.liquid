{{ 'component-collection-hero.css' | asset_url | stylesheet_tag }}

{% style %}
.collection-banner-wrapper {
  padding-top: {{ section.settings.top_padding }}px;
  padding-bottom: {{ section.settings.bottom_padding }}px;
}

.collection-banner-card-banner {
  color: {{ section.settings.txt_col }};
  background: {{ section.settings.bg_col }};
}
.collection-banner-card-banner h1 {
  color: {{ section.settings.txt_col }};
}

{% if section.settings.cards_img_position == 'left' %}
@media only screen and (min-width: 900px) {
  .collection-card-banner--image-card {
    order: 1
  }
  .collection-card-banner--text-card {
    order: 2
  }
}
{% endif %}

{% if section.settings.image_padding == 'page_margin' %}
  .collection-card-banner--image-card {
    padding: var(--page-margin-mobile);
  }
  .collection-card-banner--image-card img {
    border-radius: var(--media-radius);
  }
  @media only screen and (min-width: 1025px) {
  .collection-card-banner--image-card {
    padding: var(--page-margin-desktop) calc(var(--grid-desktop-horizontal-spacing) * 0.5) var(--page-margin-desktop) var(--page-margin-desktop);
  }

{% if section.settings.cards_img_position == 'right' %}
    @media only screen and (min-width: 1025px) {
  .collection-card-banner--image-card {
    padding: var(--page-margin-desktop) var(--page-margin-desktop) var(--page-margin-desktop) calc(var(--grid-desktop-horizontal-spacing) * 0.5);
  }
  .collection-card-banner--text-card {
    padding: var(--page-margin-desktop) calc(var(--grid-desktop-horizontal-spacing) * 0.5) var(--page-margin-desktop) var(--page-margin-desktop);
  }
{% endif %}

  }
{% endif %}
{% endstyle %}

<div class="collection-banner-wrapper collection-banner-{{ section.settings.banner_layout }}">

{% if section.settings.banner_layout == 'split_banner' and collection.image %}

<div class="collection-banner-card-banner{% if section.settings.image_padding == 'page_margin' %} collection-banner-card-banner--inset{% else %} collection-banner-card-banner--fb{% endif %}">
<div class="collection-card-banner--image-card ccbi-{{ section.settings.cards_img_ratio }}">
{% if collection.image %}{{ collection.image | image_url: width: 1800 | image_tag: loading: 'eager' }}{% endif %}
</div>
<div class="collection-card-banner--text-card">
<div class="align-{{ section.settings.txt_alignment }}">
  <h1 class="{{ section.settings.title_size }}">{{ collection.title }}</h1>
  {% if section.settings.description_enable %}
  <span class="{{ section.settings.description_size }}">{{ collection.description }}</span>
  {% endif %}
</div>
</div>
</div>

{% endif %}

{% if section.settings.banner_layout == 'stacked-image-last' and collection.image %}
<div class="collection-title-ab align-{{ section.settings.txt_alignment }} page-width">
  <h1 class="{{ section.settings.title_size }}">{{ collection.title }}</h1>
  {% if section.settings.description_enable %}
  <div class="collection-title-ab-description">{{ collection.description }}</div>
  {% endif %}
</div>
{% endif %}

{% if section.settings.banner_layout != 'split_banner' and section.settings.banner_layout != 'text-only' and collection.image %}
<div class="collection-banner {{ section.settings.banner_width }} cb-height-mobile--{{ section.settings.banner_height_mobile }} collection-banner-{{ section.settings.banner_height }}">
{% if section.settings.banner_layout contains 'overlay' %}
<div class="collection-banner-title page-width align-{{ section.settings.txt_alignment }}">
<h1 class="{{ section.settings.title_size }}">{{ collection.title | escape }}</h1>

{% if section.settings.description_enable %}
{% unless section.settings.banner_layout == 'overlay-db' %}
<div class="collection-banner-description {{ section.settings.description_size }} align-{{ section.settings.txt_alignment }}">
{{ collection.description }}
</div>
{% endunless %}
{% endif %}

</div>
{% endif %}
{% if collection.image %}
<div class="collection-banner-bg-img">{{ collection.image | image_url: width: 2800 | image_tag: loading: 'eager' }}</div>
{% endif %}
</div>
{% endif %}

{% if section.settings.banner_layout == 'overlay-db' and collection.image and section.settings.description_enable %}
<div class="collection-std-description {{ section.settings.description_size }} collection-std-description-below align-{{ section.settings.txt_alignment }} page-width">
{{ collection.description }}
</div>
{% endif %}

{% if section.settings.banner_layout == 'stacked-image-first' and collection.image %}
<div class="collection-title-bb page-width align-{{ section.settings.txt_alignment }}">
<h1>{{ collection.title | escape }}</h1>

{% if collection.description != blank and section.settings.description_enable %}
<div class="collection-std-description {{ section.settings.description_size }} align-{{ section.settings.txt_alignment }}">
{{ collection.description }}
</div>
{% endif %}
</div>
{% endif %}

{% if section.settings.banner_layout == 'text-only' or collection.image == blank  %}
<div class="collection-banner-std page-width">
<div class="collection-banner-std-title align-{{ section.settings.txt_alignment }}">
<h1 class="{{ section.settings.title_size }}">{{ collection.title | escape }}</h1>
</div>
{% if section.settings.description_enable %}
<div class="collection-std-description {{ section.settings.description_size }} align-{{ section.settings.txt_alignment }}">
{{ collection.description }}
</div>
{% endif %}
</div>
{% endif %}

</div>


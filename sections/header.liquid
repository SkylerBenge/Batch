  </form>
{% if settings.predictive_search_enabled %}</predictive-search>{% endif %}
<button id="SearchDropdownCloseButton" class="search-form-close-button" aria-label="{{ 'accessibility.close' | t }}">
  {% render 'icon-close' %}
</button>  
